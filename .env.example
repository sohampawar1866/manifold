# üåü Kadena Multi-Chain dApp Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# WALLET CONFIGURATION (Required for deployment)
# =============================================================================
# Choose ONE of the following options:

# Option 1: Private Key (Recommended for development)
# PRIVATE_KEY=your_64_character_private_key_here

# Option 2: Mnemonic Phrase (12-24 words)
# MNEMONIC=your twelve word mnemonic phrase goes here

# =============================================================================
# CUSTOM RPC ENDPOINTS (Optional)
# =============================================================================
# Override default Kadena RPC endpoints if needed

# KADENA_CHAIN_20_RPC=https://evm-testnet.chainweb.com/chainweb/0.0/evm-testnet/chain/20/evm/rpc
# KADENA_CHAIN_21_RPC=https://evm-testnet.chainweb.com/chainweb/0.0/evm-testnet/chain/21/evm/rpc
# KADENA_CHAIN_22_RPC=https://evm-testnet.chainweb.com/chainweb/0.0/evm-testnet/chain/22/evm/rpc
# KADENA_CHAIN_23_RPC=https://evm-testnet.chainweb.com/chainweb/0.0/evm-testnet/chain/23/evm/rpc
# KADENA_CHAIN_24_RPC=https://evm-testnet.chainweb.com/chainweb/0.0/evm-testnet/chain/24/evm/rpc

# =============================================================================
# DEPLOYMENT SETTINGS (Optional)
# =============================================================================
# Override default gas settings if needed

# GAS_LIMIT=5000000
# GAS_PRICE=20000000000
# DEPLOYMENT_CONFIRMATIONS=2

# =============================================================================
# DEVELOPMENT SETTINGS (Optional)
# =============================================================================

# Enable debug logging
# DEBUG=true

# Default chain for frontend (20-24)
# DEFAULT_CHAIN=20

